#include <stdio.h>
#include <stdlib.h>
#include "LinkedList.h"
#include "Employee.h"
#include "parser.h"
#include "Controller.h"


/** \brief Carga los datos de los empleados desde el archivo data.csv (modo texto).
 *
 * \param path char*
 * \param pArrayListEmployee LinkedList*
 * \return int
 *
 */
int controller_loadFromText(char* path , LinkedList* pArrayListEmployee)
{

	int rtn = -1;
	char validacion = 's';

		if (path != NULL && pArrayListEmployee != NULL){


			if(ll_isEmpty (pArrayListEmployee) == 1){

				FILE *pFile=fopen(path,"r");

				if(pFile != NULL &&
				   parser_EmployeeFromText(pFile, pArrayListEmployee) == 0 ){
					printf("\nArchivo leido y cerrado con éxito");
					rtn = 0;

				}else{
					printf("\nNo se pudo leer el archivo");
				}
				fclose(pFile);

			}else{

				//utn_getCharAceptar(&validacion, "\nYa hay datos cargados en el sistema, desea guardarlos? ('s' o 'n')    ", "\n Error, ingrese nuevamente", 3);
				switch (validacion)
				{
					case 'n':
						printf("\nSe han borrado los datos cargados anteriormente.  ");
						ll_clear(pArrayListEmployee);
						FILE *pFile=fopen(path,"r");

						if(pFile != NULL && parser_EmployeeFromText(pFile, pArrayListEmployee) == 0 )
						{
							printf("\nArchivo nuevo leido y cerrado con éxito");
							fclose(pFile);
							rtn = 0;
						}
					break;
					case 's':
						if(controller_saveAsText( "respaldo.csv", pArrayListEmployee) == 0){

							ll_clear(pArrayListEmployee);

							FILE *pFile=fopen(path,"r");

							if(pFile != NULL && parser_EmployeeFromText(pFile, pArrayListEmployee) == 0 )
							{
								printf("\nArchivo nuevo leido y cerrado con éxito");
								fclose(pFile);
								rtn = 0;
							}

						}
					break;
					}
				}
		}
	    return rtn;

}

/** \brief Carga los datos de los empleados desde el archivo data.csv (modo binario).
